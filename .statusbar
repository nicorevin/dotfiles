while [ "$(sleep 5s; pgrep dwm)" ]; do
    [ $(command -v acpi) ] && batt=$(LC_ALL=C acpi -b)
    datetime=$(date +"%d.%m %R")
        case $batt in
        *Discharging*)
                batt="$(echo $batt|awk '{gsub(/\,/,""); print $4}') | "
                ;;
        *)
                batt=""
                ;;
        esac

    xsetroot -name "$batt$datetime"
done
